@model List<Reservation>
@{
    ViewData["Title"] = "My Reservations";
    Layout = "_MainLayout";
}
<div class="container my-4">
    <h3 class="mb-3">My Reservations</h3>

    @if (Model.Count == 0)
    {
        <p class="text-muted">No reservations yet.</p>
        <a asp-controller="Residence" asp-action="Index" class="btn btn-primary">Find a stay</a>
    }
    else
    {
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Residence</th>
                    <th>Location</th>
                    <th>Start</th>
                    <th>End</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.Residence?.Name</td>
                    <td>@r.Residence?.Location?.Name</td>
                    <td>@r.ReservationStartDate.ToString("yyyy-MM-dd")</td>
                    <td>@r.ReservationEndDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        <form asp-action="Cancel" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@r.ReservationId" />
                            <button class="btn btn-sm btn-outline-danger">Cancel</button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
        <a asp-controller="Residence" asp-action="Index" class="btn btn-outline-secondary">Back to Home</a>
    }
</div>
