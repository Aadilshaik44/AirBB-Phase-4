@model IEnumerable<Client>
@{
    ViewData["Title"] = "Manage Users";
    Layout = "_AdminLayout";
}

<h2>Manage Users</h2>

<a asp-action="Add" class="btn btn-primary mb-3">Add New User</a>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Type</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {
            <tr>
                <td>@client.Name</td>
                <td>@client.Email</td> 
                <td>@client.PhoneNumber</td> 
                <td>@client.UserType</td> 
                <td>
                    <a asp-action="Edit" asp-route-id="@client.UserId" class="btn btn-sm btn-primary">Edit</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@client.UserId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>