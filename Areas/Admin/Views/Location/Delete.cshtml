@model Location
@{
    ViewData["Title"] = "Delete Location";
    Layout = "_AdminLayout";
}

<h2>Delete Location</h2>
<h3 class="text-danger">Are you sure you want to delete "@Model.Name"?</h3>
<p>This action cannot be undone. This may also delete associated residences.</p>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="LocationId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>