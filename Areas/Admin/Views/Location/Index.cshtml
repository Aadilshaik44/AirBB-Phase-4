@model IEnumerable<Location>
@{
    ViewData["Title"] = "Manage Locations";
    Layout = "_AdminLayout";
}

<h1>Manage Locations</h1>
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
<a asp-action="Add" class="btn btn-primary mb-3">Add New Location</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var location in Model)
        {
            <tr>
                <td>@location.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@location.LocationId" class="btn btn-sm btn-outline-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@location.LocationId" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>